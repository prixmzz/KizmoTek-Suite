{
  "name": "kizmotek-suite",
  "productName": "KizmoTek Suite",
  "version": "1.0.0",
  "description": "Moderation Suite for KizmoTek Studio Game Team",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^24.0.0",
    "electron-icon-builder": "^2.0.1"
  },
  "build": {
    "appId": "net.on-nocom.ktek",
    "artifactName": "${productName}-Setup.${ext}",
    "asar": true,
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "icon": "icons/win/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
